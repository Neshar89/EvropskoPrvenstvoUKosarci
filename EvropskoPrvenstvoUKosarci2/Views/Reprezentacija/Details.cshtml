@model EvropskoPrvenstvoUKosarci2.Models.Reprezentacija

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <link href="~/Content/Stilizacija.css" rel="stylesheet" />
}
<br />
<h2>Detalji</h2>

<div id="panel">
    <h4>Reprezentacija</h4>
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NazivReprezentacija)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazivReprezentacija)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zemlje.NazivZemlje)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zemlje.NazivZemlje)
        </dd>

    </dl>
    <div>
        @if (Session["uloga"].ToString() == "Delegat")
        {
            @Html.ActionLink("Izmeni", "Edit", new { id = Model.ReprezentacijaId }, new { @class = "btn btn-warning" })
        }|
@Html.ActionLink("Nazad na reprezentacije", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>

<div class="picture">
    <img width="100%" src="/Content/Images/reprezentacije.jpg" alt="Reprezentacije" />
</div>
