@model IEnumerable<EvropskoPrvenstvoUKosarci2.Models.Reprezentacija>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Stilizacija.css" rel="stylesheet" />
}
<br />
<h2>Reprezentacije</h2>

<p>
    @if (Session["uloga"].ToString() == "Delegat")
    {
        @Html.ActionLink("Dodajte novu reprezentaciju", "Create", null, new { @class = "btn btn-warning" })
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazivReprezentacija)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zemlje.NazivZemlje)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazivReprezentacija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zemlje.NazivZemlje)
            </td>
            <td>
                @if (Session["uloga"].ToString() == "Delegat")
                {
                    @Html.ActionLink("Izmeni", "Edit", new { id = item.ReprezentacijaId }, new { @class = "btn btn-warning" })
                } |

                @Html.ActionLink("Detalji", "Details", new { id = item.ReprezentacijaId }, new { @class = "btn btn-warning" }) |

                @if (Session["uloga"].ToString() == "Delegat")
                {
                    @Html.ActionLink("Obriši", "Delete", new { id = item.ReprezentacijaId }, new { @class = "btn btn-warning" })
                }
            </td>
        </tr>
    }

</table>
